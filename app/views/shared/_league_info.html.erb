<a href="/leagues"><i class="fa-solid fa-chevron-left"></i></a>
  <div class="container" style="margin-top: 30px; margin-bottom: 50px; width: 95%;">
      <div class="module-invite d-flex flex-column align-items-center shadow border-2 border-secondary ms-4 me-4">
        <h3 class="text-center">
          <%= @league.name %>
        </h3>
        <h3 class="text-center mt-3" style="font-size:18px;"> Competing in:
          <div class="sport-info d-flex align-items-center justify-content-between mt-3 mb-3" >
          <strong><%= @league.sport %></strong>
          <%= icon_tag(@league) %>
          </div>
        </h3>
        <h3 class="text-center" style="font-size:18px;"> Organized by:
          <strong><%= @league.creator.first_name %> <%= @league.creator.last_name %></strong>
        </h3>
        <% if @league.matches.empty? && @league.creator == current_user %>
          <div class="conditional-invites mt-4">
            <div class="input-group" data-controller="clipboard" data-clipboard-feedback-text-value="Copied!" style="justify-content: center;">
              <input type="hidden" class="form-control" data-clipboard-target="input" type="text" value="<%= invitation_url %>" readonly>
              <div class="input-group-append">
              <button id="copy-button" class="btn btn-outline-primary" style="width:220px; color:white;" data-action="click->clipboard#copy">Copy link to invite your friends.</button>
              </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
